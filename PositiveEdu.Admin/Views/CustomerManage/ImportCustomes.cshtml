                                        if (i == 0) {
                                            //添加结果
                                            c1.append("<div style='color:blue ;font-size:50px'>此次共计添加" + r.a3 + "行添加成功！该文件共" + r.a1.length + "行</div> <br/><br/>");

                                            c1.append("<a href ='/CustomerManage/DownloadFile?path="+r.a5+"' > 导入结果下载</a>");

                                        }
