                                        //    //如果添加成功
                                        //    c1.append("<div style='color:red'>第" + (i + 2) + "行，此行添加成功！</div> <br/><br/>");
                                        //} else {
                                        //    //如果添加失败

                                        //    c1.append("<div style='color:red'>第" + (i + 2) + "行，此行添加失败！，原因如下<br/>" + st + "</div> <br/><br/>");

                                        //}
                                        st = "";


                                    }
                                }



                        },
                        error: function (aa) {
                        alert(aa);
                        }
                        });

        }
    </script>
}