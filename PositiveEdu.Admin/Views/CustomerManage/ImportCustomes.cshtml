            s1.append("<option value='CustomizeTag10'>客户自定义标签Tag10</option> ");
        }
//导入
        function p() {

            //初始化提交数据
            var b = [];

            var p = 0;
            for (var i = 0; i < tb.children().length; i++) {
                if ($("#a" + i).prop("checked")) {
                    var c = {};
                    //获取下标
                    c.index = i;
                    //获取类型
                    c.name = $("#b" + i).val();
                    b[p] = c;
                    p++;
                }
            }
    

           
 
            //去除相同项
            for (var i = 0; i < b.length; i++) {
                for (var j = 0; j < b.length; j++) {
                    if (i != j) {

                        if (b[i].name == b[j].name) {
                            alert("列匹配不能相同！！！")

                            return;
                        }
                    }

                }
            }
            console.log(b);
            //提交数据不完整，返回
            if (b.length < 1) {
                alert("请勾选！！")
                return;
            }
            $("#fs2").val($("#s" + 1).val())
            //数据复制
            $("#fs1").val(JSON.stringify(b));
            //数据提交
            timedCount();
                        $("#form1").ajaxSubmit({
                        url: "@Url.Action("ReadFiles", "CustomerManage")",
                            type: "post",
                            beforeSend: function () {

                            },
                            success: function (r1) {

                                if (r != 0) {
                                    var r = JSON.parse(r1);
                                    console.log(r);
                                    stopCount();
                                    $("#a").width("100%");


                                      //数据回显
                                    var c1 = $("#c1");
                                    c1.empty();
                                    for (var i = 0; i < r.a1.length; i++) {
                                        var st = "";
                                        for (var j = 0; j < r.a1[i].col.length; j++) {


                                            var p = r.a1[i].col[j].message + "";

                                            st = st + p+"<br/>";


