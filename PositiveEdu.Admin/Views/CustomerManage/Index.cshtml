@using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model PagedList<T_Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>用户列表</h2>
        <ol class="breadcrumb">
            <li>
                <a href="###">会员管理</a>
            </li>
            <li class="active">
                <strong>用户列表</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>用户列表</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Index", "CustomerManage", FormMethod.Get, htmlAttributes: new { @class = "form-inline" }))
                    {
                        <div class="form-group">
                            <label for="InputMobile" class="sr-only">会员名称</label>
                            <input type="text" placeholder="会员名称" id="InputMobile" class="form-control" name="CustomerRealName" value="@ViewBag._CustomerRealName">
                        </div>
                        <div class="form-group">
                            <label for="InputMobile" class="sr-only">会员手机号</label>
                            <input type="text" placeholder="会员手机号" id="InputMobile" class="form-control" name="CustomerPhoneNum" value="@ViewBag._CustomerPhoneNum">
                        </div>
                        <div class="form-group">
                            <label for="InputMobile" class="sr-only">微信昵称</label>
                            <input type="text" placeholder="微信昵称" id="InputMobile" class="form-control" name="CustomerWechatNickName" value="@ViewBag._CustomerWechatNickName">
                        </div>
                        <div class="form-group">
                            <label for="SelectPayment" class="sr-only">性别</label>

                            <select class="form-control" name="payment" id="sex">
                                <option value="全部" @(ViewBag.payment == "全部" ? "selected =selected" : "")>全部</option>
                                <option value="男" @(ViewBag.payment == "男" ? "selected =selected" : "")>男</option>
                                <option value="女" @(ViewBag.payment == "女" ? "selected =selected" : "")>女</option>

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="InputMobile" class="sr-only">证件号</label>
                            <input type="text" placeholder="证件号" id="InputMobile" class="form-control" name="CustomerCertificateNum" value="@ViewBag._CustomerCertificateNum">
                        </div>
                        <div class="form-group">
                            <label for="InputMobile" class="sr-only">会员编号</label>
                            <input type="text" placeholder="会员编号" id="InputMobile" class="form-control" name="CustomerId" value="@ViewBag._CustomerId">
                        </div>
                        <div></div>
                        <div class="form-group">
                            <label for="SelectPayment" class="sr-only">会员标签</label>
                            <label> <input type="checkbox" value="1" name="role" @(((String[])ViewBag.role).Contains(1 + "") ? "checked=checked" : "")> <i></i> 标签1 </label>
                            <label> <input type="checkbox" value="2" name="role" @(((String[])ViewBag.role).Contains(2 + "") ? "checked=checked" : "")> <i></i> 标签2 </label>
                            <label> <input type="checkbox" value="3" name="role" @(((String[])ViewBag.role).Contains(3 + "") ? "checked=checked" : "")> <i></i> 标签3 </label>
                            <label> <input type="checkbox" value="4" name="role" @(((String[])ViewBag.role).Contains(4 + "") ? "checked=checked" : "")> <i></i> 标签4 </label>
                            <label> <input type="checkbox" value="5" name="role" @(((String[])ViewBag.role).Contains(5 + "") ? "checked=checked" : "")> <i></i> 标签5 </label>
                            <label> <input type="checkbox" value="6" name="role" @(((String[])ViewBag.role).Contains(6 + "") ? "checked=checked" : "")> <i></i> 标签6 </label>
                            <label> <input type="checkbox" value="7" name="role" @(((String[])ViewBag.role).Contains(7 + "") ? "checked=checked" : "")> <i></i> 标签7 </label>
                            <label> <input type="checkbox" value="8" name="role" @(((String[])ViewBag.role).Contains(8 + "") ? "checked=checked" : "")> <i></i> 标签8 </label>
                            <label> <input type="checkbox" value="9" name="role" @(((String[])ViewBag.role).Contains(9 + "") ? "checked=checked" : "")> <i></i> 标签9 </label>
                            <label> <input type="checkbox" value="10" name="role" @(((String[])ViewBag.role).Contains(10 + "") ? "checked=checked" : "")> <i></i> 标签10 </label>
                        </div>

                        <button class="btn btn-white" type="submit">查询</button>
                    }

                    <div class="hr-line-dashed"></div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>会员</th>
                                <th>手机号</th>
                                <th>会员号</th>
                                <th>证件号</th>
                                <th>性别</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                foreach (var item in Model)
                                {

                                    <tr>

                                        <td>@item.CustomerRealName</td>
                                        <td>@item.CustomerPhoneNum</td>
                                        <td>@item.CustomerId</td>
                                        <td>@item.CustomerCertificateNum</td>
                                        <td>@item.CustomerSex</td>
                                        <td>
                                            <a href="@Url.Action("Detail", new { id = item.Id })">查看</a>
                                            <a href="@Url.Action("Edit", new { id = item.Id })">编辑</a>
                                        </td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>

                    <div class="dataTables_paginate">
                        <div class="row">
                            <div class="col-sm-8">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, mobile = ViewBag.Mobile, payment = ViewBag.Payment }), PositiveEdu.Common.PagerUtility.GetPagedListRenderOptions())
                            </div>
                            <div class="col-sm-4 pagination text-right">
                                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
