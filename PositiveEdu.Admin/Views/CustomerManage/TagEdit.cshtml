@using PositiveEdu.DAL
@model T_CustomerTag
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>标签修改</h2>
        <ol class="breadcrumb">
            <li>
                <a href="###">会员管理</a>
            </li>
            <li class="active">
                <strong>标签修改</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>标签修改</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("TagEdit", "CustomerManage", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="col-sm-2 control-label">分类名称：</label>
                            <div class="col-sm-10"><input type="text" class="form-control" name="TagName" value="@Model.TagName"></div>
                            <input type="hidden" class="form-control" name="id" value="@Model.id">

                        </div>

                        <div class="hr-line-dashed"></div>


 



                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <a href="@Url.Action("CustomerTagIndex")" class="btn btn-white">返回</a>
                                <button class="btn btn-primary" type="submit">保存</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
}
