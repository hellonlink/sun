                                    var c1 = $("#c1");
                                    c1.empty();
                                    var ct = parseInt(r.a3) + parseInt(r.a4);
                                    c1.append("该文件共"+ct+"行成功导入"+r.a3+"行，导入失败"+r.a4+"行</br>");
                          
                      
                                    c1.append("<a href ='/CustomerManage/DownloadFile?path=" + r.a5 + "' > 导入结果下载</a>");
                                   
                                }



                        },
                        error: function (aa) {
                        alert(aa);
                        }
                        });

        }



        $(function () {
            FullS1();
        });
    </script>
}