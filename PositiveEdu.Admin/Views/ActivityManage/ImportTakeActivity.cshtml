//导入
        function sub() {

            var t3 = $("#fs").val();
            if (t3 == "") {
                alert("请重新选择文件 后缀为 .xlsx ");
                return;;
            }
            var t3 = $("#fs").val().split('.')[1];
            if (t3 != null && t3 != "xlsx") {
                alert("请重新选择文件 后缀为 .xlsx ");
                return;
            }

            //数据提交

                        $("#form1").ajaxSubmit({
                        url: "@Url.Action("ReadFiles", "ActivityManage")",
                            type: "post",
                            beforeSend: function () {
                                timedCount();
                            },
                            success: function (r1) {

                                if (r1 != 0) {
                                    var r = JSON.parse(r1);
                                    console.log(r1);
                                    stopCount();
