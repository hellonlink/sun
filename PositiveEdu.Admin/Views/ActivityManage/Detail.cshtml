@using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model  T_Activity
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>活动详情</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/ActivityManage">活动管理</a>
            </li>
            <li class="active">
                <strong>活动详情</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>活动详情</h5>
                </div>
                <div class="ibox-content">


                    <div class="form-group">
                        <h3><label style="color:blue">活动名称：</label>@Model.ActivityName</h3>
                    </div>
                    <div></div>

                    <div class="form-group">
                        <h3><label style="color:blue">活动唯一码：</label>@Model.GUID</h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">活动报名时间段：</label>
                            @Model.RegistrationStartTime - @Model.RegistrationStopTime
                        </h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">活动执行时间段：</label>
                            @Model.ActivityStartTime-@Model.ActivityStopTime
                        </h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">报名人数：</label>
                            @Model.T_CustomerActivity.Count()/@Model.RegistrationNumber
                        </h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">是否报名即参与：</label>

                            @(Model.IsAllTake == 1 ? "是" : "否")
                        </h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">参与人数：</label>

                            @(Model.T_CustomerActivity.Count()) -@(Model.JoinNumber)
                        </h3>
                    </div>
                    <div></div>     <div class="form-group">
                        <h3>
                            <label style="color:blue">活动参与消耗积分：</label>
                            @Model.NeedIntegral
                        </h3>
                    </div>
                    <div></div>
                    <div class="form-group">
                        <h3>
                            <label style="color:blue">是否参与即获奖：</label>
                            @(Model.IsAllSameReward == 1 ? "是" : "否")
                        </h3>
                    </div>
                    <div></div>
                    <div class="form-group">
                        <h3>
                            <label style="color:blue">是否启用：</label>
                            @(Model.IsActivityEffective == 1 ? "是" : "否")
                        </h3>
                    </div>
                    <div></div>
                    <div class="form-group">
                        <h3>
                            <label style="color:blue">活动创建时间：</label>
                            @Model.CreatedOn

                        </h3>
                    </div>

                    <div></div>
                    <div class="form-group">
                        <h3>
                            <label style="color:blue">活动创建人：</label>
                            @Model.CreatedBy

                        </h3>
                    </div>
                    <div></div>

                    @{



                        if (Model.T_CustomerActivity.Count() > 0)
                        {

                            <a href="@Url.Action("Index", new {   })">返回</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Delete", new { id=Model.Id })">删除</a>

                        }

                    }



                </div>
            </div>
        </div>
    </div>
</div>
