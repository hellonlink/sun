
 @using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model PagedList<T_Gifts>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">  
    <div class="col-lg-10">
        <h2>新闻列表</h2>
        <ol class="breadcrumb">
            <li>
                <a href="###">新闻管理</a>
            </li>
            <li class="active">
                <strong>新闻列表</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>新闻列表</h5>
                </div>
                <div class="ibox-content">

                    <a href="@Url.Action("Create")" class="btn btn-default">新增新闻</a>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>礼品名称</th>
                                <th>礼品编号</th>
                                <th>启用</th>
                                <th>所属分类</th>
                                <th>是否虚拟礼品</th>
                                <th>当前库存</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                                foreach (var item in Model)
                                {
                            <tr>
                                <td>@item.GiftName</td>
                                <td>@item.GiftNo</td>
                                <td>@item.IS</td>
                                <td>@item.GiftType</td>
                                <td>@item.GiftNo</td>
                                <td>@item.GiftNo</td>
                                <td>
                                    <a href="@Url.Action("Edit", new { id = item.id})">修改</a>
                                    @Html.ConfirmLink("删除", "Delete", new { id = item.id })
                                </td>
                            </tr>

                                    index++;
                                }
                            }
                        </tbody>
                    </table>

                    <div class="dataTables_paginate">
                        <div class="row">
                            <div class="col-sm-8">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PositiveEdu.Common.PagerUtility.GetPagedListRenderOptions())
                            </div>
                            <div class="col-sm-4 pagination text-right">
                                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
