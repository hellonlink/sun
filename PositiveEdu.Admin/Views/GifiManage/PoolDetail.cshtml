@using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model  T_GiftsChild
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            券证明细
        </h2>
        <ol class="breadcrumb">
            <li>
                <a href="/GifiManage">礼品管理</a>
            </li>
            <li class="active">
                <strong>
                    券证明细
                </strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        券证明细
                    </h5>
                </div>
                <div class="ibox-content">







                    <div class="form-group">
                        <label>当前券证：</label>@Model.T_Gifts.GiftName

                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>抵用金额：</label>@Model.T_Gifts.SaveMoney

                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>使用条件：</label> 消费金额>=@Model.T_Gifts.MoneyLimit
                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>有效时间范围：</label> @Model.T_Gifts.BeginTime ~@Model.T_Gifts.StopTime

                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>券证唯一码：</label>@Model.CouponNo

                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>券证所有人：</label>   @{

                            if (Model.T_Customer != null)
                            {
                                @Model.T_Customer.CustomerRealName
                            }

                        }
                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>券证获取时间：</label> @Model.ExchangeTime
                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>券证是否已使用：</label> @(Model.IsUsed == 0 ? "已使用" : "未使用")
                    </div> <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <label>券证使用时间：</label> @Model.UseTime
                    </div> <div class="hr-line-dashed"></div>





                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('#GiftMainPicture').thumbnail();
            $('#GiftThumbnailPicture').thumbnail();
            $('.input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                format: "yyyy-mm-dd",
                language: 'zh-CN',
            });
            var um = UM.getEditor('myEditor');


        });</script>
}
