@using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model  T_Gifts
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>
            实体礼品详情
        </h2>
        <ol class="breadcrumb">
            <li>
                <a href="/GifiManage">礼品管理</a>
            </li>
            <li class="active">
                <strong>
                    实体礼品详情
                </strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>
                        实体礼品详情
                    </h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("RealGiftsDete", "GifiManage", FormMethod.Post, htmlAttributes: new { @class = "form-inline" }))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label>礼品名称：</label>@Model.GiftName

                        </div> <div class="hr-line-dashed"></div>
                        <div class="form-group">

                            <div class="form-group">
                                <label>是否实体礼品：</label>  @(Model.GiftType == 0 ? "是" : "否")


                            </div> <div class="hr-line-dashed"></div>

                            <label>礼品编号：</label>@Model.GiftNo

                        </div> <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label>礼品简介：</label>@Model.GiftIntroductionText
                        </div> <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label>礼品缩略图：</label>
                            <img src="@Model.GiftThumbnailPicture" alt="..." class="img-thumbnail" />

                        </div>
                        <div class="hr-line-dashed"></div>


                        <div class="form-group">
                            <label>礼品大图：</label>
                            <img src="@Model.GiftMainPicture" alt="..." class="img-thumbnail" />
                        </div>


                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">图文介绍：</label>
                            <div class="col-sm-10">
                                <script type="text/plain" id="myEditor" name="GiftIntroductionPT" style="width:100%;height:460px;">
                                    @Html.Raw(HttpUtility.HtmlDecode(@Model.GiftIntroductionPT))
                                </script>
                            </div>


                        </div> <div class="hr-line-dashed"></div>


                        <div class="form-group">
                            <label>所属分类：</label>

                            @{

                                PeContext DB = new PeContext();
                                var a = DB.T_GiftsTag.ToList();

                                foreach (var item in a)
                                {


                                    if (Model.T_GiftsTagId == item.id)
                                    {
                                        @item.TagName;
                                    }




                                }

                                DB.Dispose();

                            }

                        </div> <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label>当前剩余库存：</label>@Model.GiftInventory
                        </div> <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label>是否有效：</label>
                            @(Model.IsShelf == 0 ? "是" : "否")

                        </div> <div class="hr-line-dashed"></div>


                        <div class="form-group">
                            <label>是否积分商城可以兑换：</label>
                            @(Model.IsExchange == 0 ? "是" : "否")
                        </div> <div class="hr-line-dashed"></div>


                        <div class="form-group">
                            <label>兑换所需积分：</label>@Model.RedeemPoints
                        </div> <div class="hr-line-dashed"></div>
                        <div class="hr-line-dashed">

                        </div>
                        <div class="form-group">
                            <label>自定义字段1：：</label>@Model.Tag1
                        </div> <div class="hr-line-dashed"></div>
                        <div class="form-group">

                            <label>自定义字段2：：</label>@Model.Tag2
                        </div><div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label>自定义字段3：：</label>@Model.Tag3
                        </div> <div class="hr-line-dashed"></div>
                        <div class="form-group">

                            <div class="form-group">
                                <label>自定义字段4：</label>@Model.Tag4
                            </div> <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label>自定义字段5：：</label>@Model.Tag5
                            </div> <div class="hr-line-dashed"></div>

                            <input type="hidden" name="id" value="@Model.id" />
                            <button class="btn btn-white" type="submit">删除</button>


                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('#GiftMainPicture').thumbnail();
            $('#GiftThumbnailPicture').thumbnail();
            $('.input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                format: "yyyy-mm-dd",
                language: 'zh-CN',
            });
            var um = UM.getEditor('myEditor');


        });</script>
}
