@using PositiveEdu.DAL
@using PagedList
@using PagedList.Mvc
@model PagedList<T_GiftsChild>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>礼品列表</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/GifiManage">礼品管理</a>
            </li>
            <li class="active">
                <strong>礼品列表</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>礼品列表</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("Index", "GifiManage", FormMethod.Get, htmlAttributes: new { @class = "form-inline" }))
                    {
                        <div class="form-group">
                            <label>券证名称：：</label>
                            <input type="text" placeholder="礼品名称" id="InputMobile" class="form-control" name="GiftName" value="@ViewBag.GiftName">
                        </div>


                        <div class="form-group">
                            <label>是否已发送：</label>
                            <input type="radio" id="InputMobile" @( ViewBag.ExchangeTime != null ? "checked=checked" : "") class="form-control" name="ExchangeTime" value="0">是



                            <input type="radio" id="InputMobile" @(ViewBag.ExchangeTime == null ? "checked=checked" : "") class="form-control" name="ExchangeTime" value="1">否


                        </div> <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label>是否已使用：</label>
                            <input type="radio" id="InputMobile" @( ViewBag.IsUsed == 1 + "" ? "checked=checked" : "") class="form-control" name="GiftType" value="0">是



                            <input type="radio" id="InputMobile" @(ViewBag.IsUsed == 0 + "" ? "checked=checked" : "") class="form-control" name="GiftType" value="1">否


                        </div>

                        <div class="form-group">
                            <label>卷证类型：</label>mg
                            <select name="T_GiftsTagId">
                                @{

                                    PeContext DB = new PeContext();
                                    var a = DB.T_GiftsTag.ToList();

                                    foreach (var item in a)
                                    {



                                        <option value="@item.id" @(ViewBag.T_GiftsTagId == @item.id ? "selected =selected" : "")>@item.TagName</option>



                                    }

                                    DB.Dispose();

                                }
                            </select>
                        </div>


                        <div class="form-group">
                            <label>卷证编号：</label>
                            <input type="text" placeholder="礼品编号" id="InputMobile" class="form-control" name="CouponNo" value="@ViewBag.CouponNo">
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label>会员编号：</label>
                            <input type="text" placeholder="礼品编号" id="InputMobile" class="form-control" name="CustomerId" value="@ViewBag.CustomerId">
                        </div>

                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label>会员手机号：</label>
                            <input type="text" placeholder="礼品编号" id="InputMobile" class="form-control" name="CustomerPhoneNum" value="@ViewBag.CustomerPhoneNum">
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">券证实际发送时间：</label>
                            <div class="col-sm-10">
                                <div class="input-group date col-lg-3">
                                    @Model[0].ExchangeTime
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>

                                    <input type="text" style="width:500px " class="form-control input-sm" name="ExchangeStartTime" value="@ViewBag.ExchangeStartTime">
                                    <span>~</span>
                                </div>
                                <div class="input-group date col-lg-3">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>

                                    <input type="text" style="width:500px " class="form-control input-sm" name="ExchangeStopTime" value="@ViewBag.ExchangeStopTime">
                                </div>
                            </div>
                        </div> <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">券证实际使用时间：</label>
                            <div class="col-sm-10">
                                <div class="input-group date col-lg-3">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    <input type="text" style="width:500px " class="form-control input-sm" name="UseStartTimes" value="@ViewBag.UseStartTime">
                                    <span>~</span>
                                </div>
                                <div class="input-group date col-lg-3">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>

                                    <input type="text" style="width:500px " class="form-control input-sm" name="UseStoptimes" value="@ViewBag.UseStoptime">
                                </div>
                            </div>
                        </div> <div class="hr-line-dashed"></div>

                        <button class="btn btn-white" type="submit">查询</button>
                    }
                    <div class="hr-line-dashed"></div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> 券证名称       </th>
                                <th> 券证唯一码           </th>
                                <th> 是否发送   </th>
                                <th> 券证类型   </th>
                                <th> 是否使用       </th>
                                <th> 会员名称     </th>
                                <th> 选择     </th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td>@item.T_Gifts.GiftName</td>
                                        <td>@item.CouponNo </td>
                                        <td>@(item.CustomerId != null ? "是" : "否")</td>
                                        <td>

                                            @(item.T_Gifts.IsCoupon == 0 ? "自主卷" : "第三方卷")


                                        </td>
                                        <td>@( item.IsUsed == 1 ? "是" : "否")</td>
                                        <td>
                                            @item.CustomerId
                                            @{

                                                PeContext DB = new PeContext();
                                                var a = DB.T_Customer.Where(x => x.CustomerId == item.CustomerId).FirstOrDefault();
                                                if (a != null)
                                                {
                                                    @a.CustomerRealName
                                                }




                                            }



                                        </td>

                                        <td>


                                            <a href="@Url.Action("RealGiftsDetail", new { id = item.id })">明细</a>

                                        </td>
                                    </tr>

                                }
                            }
                        </tbody>
                    </table>
                    <div class="dataTables_paginate">
                        <div class="row">
                            <div class="col-sm-8">
                                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, mobile = ViewBag.Mobile, payment = ViewBag.Payment }), PositiveEdu.Common.PagerUtility.GetPagedListRenderOptions())
                            </div>
                            <div class="col-sm-4 pagination text-right">
                                @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });

            $('#GiftMainPicture').thumbnail();
            $('#GiftThumbnailPicture').thumbnail();
            $('.input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                format: "yyyy-mm-dd",
                language: 'zh-CN',
            });
            var um = UM.getEditor('myEditor');
        });</script>
}
